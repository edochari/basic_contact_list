<html>

<head>
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/38bdac8a71.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <p id="heading">Contacts</p>

    <div>
        <ul class="list">
            <% for (let i of contact_list) {%>
                <li class="list-item">
                    <i class="fa-solid fa-user human-icon"></i>
                    <div class="text-box">
                        <p class="text">
                            <%= i.name%>
                        </p>
                        <p class="text">
                            <%= i.phone%>
                        </p>
                    </div>
                    <i class="fa-solid fa-square-xmark delete-icon"></i>
                </li>
                <%}%>
        </ul>

    </div>
    <form action="/create-contact" method="POST">
        <input type="text" name="name" placeholder="Enter Name" required>
        <input type="number" name="phone" placeholder="Enter Phone number" required>
        <button type="submit">Add Contact</button>
    </form>
    <script src="/js/home.js"></script>
</body>

</html>